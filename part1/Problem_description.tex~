      \begin{tabular}{|P{1cm}|P{1cm}P{1cm}P{1cm}|}
        \hline
        i & p_i & r_{i1} & r_{i2}\\
        \hline
        1 & 4 & 2 & 3 \\
        2 & 3 & 1 & 5 \\
        3 & 5 & 2 & 2 \\
        4 & 8 & 2 & 4 \\
        \hline
      \end{tabular}}
    \hfill
